<div tal:condition="python:not view.isAnon">
	<b>Kwetter Timeline for ...<label tal:content="python: view.member.fullname"/></b>
		<form id="timeline">
			<input type="hidden" name="a" tal:attributes="value python:view.member.getId()"/>
			<input type="text" name="m" placeholder="What's up..."/>
			<input type="submit" value="Share"/>
		</form>
		<div id="result"></div>
	<script type="text/javascript">

		$('#timeline').submit(function(event) {
				event.preventDefault();
				var $form = $(this);
				message = $form.find('input[name="m"]').val();
				avatar = $form.find('input[name="a"]').val();
				$.post('/kwetter', {avatar:avatar, command:'post', message:message},
					function(data) {}
				      );
				}
				);


function timeline(avatar)
{
	$.post('/kwetter', { avatar: avatar, command: 'timeline', since: '2010-12-31 12:00:00', }, 
			function(data) {
			$('.result').html(data);
			});
}

	</script>

</div>
