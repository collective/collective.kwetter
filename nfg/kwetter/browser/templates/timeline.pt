<div id="kwetter" tal:condition="python:not view.isAnon">
		<form id="timeline" tal:attributes="action python:'%s/kwetter' % view.portal_url">
			<input type="hidden" name="a" tal:attributes="value python:view.member.getId()"/>
			<textarea rows="3" cols="20" type="text" name="m" placeholder="What's up..."></textarea>
			<span id="charsAllowed">140</span>
			<input type="submit" class="allowMultiSubmit" value="Share"/>
		</form>
		<div id="result"></div>
		<div id="loadmore">[VVV]</div>
	<script type="text/javascript">
var form = $('#timeline')
var avatar = form.find('input[name="a"]');
var message = form.find('textarea[name="m"]');
form.submit(kwetter_post);
kwetter_search(avatar);
kwetter_clear(message);
	</script>
</div>
